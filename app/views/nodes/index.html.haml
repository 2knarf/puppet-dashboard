#sidebar= render 'shared/node_manager_sidebar'
#main

  .header
    %h2== #{action_name.titleize unless action_name == 'index' } Nodes

  .item
    .section
      %h3
        Daily Run Status
      = render 'statuses/run_failure', :statuses => Status.by_interval(:limit => 30, :nodes => @nodes)

    .actionbar
      = render 'search'
      = render 'actions'
      %div{:style => 'clear:both;'}

    = render 'nodes', :nodes => @nodes
