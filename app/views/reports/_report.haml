.header
  %h2
    %span.status{:class => report.status}
      = report.time.to_s(:long)
    - if report.node
      %span.alt for
      = link_to report.node.name, report.node
  %ul.actions
    %li= link_to 'Destroy', @report, :confirm => 'Are you sure?', :method => :delete, :class => "delete button"

.item
  .section
    %h3 Metrics
    - report.metrics.each do |name, metric|
      .section
        %h4= name.titleize
        %table.inspector
          = render metric

  .section.clear
    %h3 Log
    %table.inspector
      %thead
        %tr
          %th Level
          %th Message
          %th Source
          %th Time
      %tbody
        = render report.logs
