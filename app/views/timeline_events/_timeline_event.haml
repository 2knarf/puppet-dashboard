- te = timeline_event
- subject = te.subject
- secondary = te.secondary_subject

- primary = secondary || subject
- primary_class = primary.class.name

%li
  %span.type{:class => "#{primary_class.downcase} type"}
    %span= primary_class.titleize
  = link_to_unless secondary, te.subject_name.capitalize, primary
  was
  = te.event_type.tr('_', ' ')
  - if secondary
    = secondary.class.name
    = link_to te.secondary_name, secondary
  = time_ago_in_words(te.created_at)
  ago.
