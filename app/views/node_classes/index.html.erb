<h2>Node Classes</h2>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @node_classes.each do |node_class| %>
  <tr>
    <td><%= link_to h(node_class.name), node_class %></td>
    <td><%= link_to 'Edit', edit_node_class_path(node_class) %></td>
    <td><%= link_to 'Destroy', node_class, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Node Class', new_node_class_path %>
