#sidebar= render 'shared/node_manager_sidebar'
#main
  .header
    %h2 Classes

  .item
    .actionbar
      = render 'shared/search'
      = render 'actions'
      %div{:style => 'clear:both;'}

    %table.main
      %thead
        %tr
          %th.check
            = check_box_tag "check_all"
          %th.name
            Name
      %tbody
        - @node_classes.each do |n|
          %tr[n]
            %td.check
              = check_box_tag "check_all"
            %td.name
              = link_to h(n.name), n
    - if @node_classes.respond_to?(:total_pages) && @node_classes.total_pages > 1
      .actionbar
        = will_paginate(@node_classes)
        %div{:style => 'clear:both;'}
